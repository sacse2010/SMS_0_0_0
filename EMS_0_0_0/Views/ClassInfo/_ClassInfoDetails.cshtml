

<div class="bs-example">
    <div class="row">
        <div class="col-md-12">
            <form id="ClassForm">
                <div class="panel panel-default">
                    <div class="panel-heading">Class Info</div>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="inputClassName">Class Name</label>
                                <div class="col-md-6">
                                    <input type="text" placeholder="Class Name" id="txtClassName" class="form-control" name="Class Name" required validationMessage="Enter {0}">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label" for="inputDescription">Description</label>
                                <div class="col-md-6">
                                    <textarea class="form-control" id="txtDescription" rows="3"></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" id="chkIsActive" checked name="Accept" required validationMessage="Acceptance is required"> IsActive
                                        </label>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                    <ul class="list-group ">
                        <li class="list-group-item">
                            <button class="btn btn-default" type="submit">Submit</button>
                        </li>
                    </ul>
                </div>
            </form>
        </div>
    </div>

</div>
<script>
    $(document).ready(function () {
        var validator = $("#ClassForm").kendoValidator().data("kendoValidator"), status = $(".status");
    });
</script>
